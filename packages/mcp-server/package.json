{
  "name": "@notetaker/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for note-taking and management",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./noteService": {
      "import": "./dist/noteService.js",
      "types": "./dist/noteService.d.ts"
    },
    "./visualizationService": {
      "import": "./dist/visualizationService.js",
      "types": "./dist/visualizationService.d.ts"
    },
    "./searchService": {
      "import": "./dist/searchService.js",
      "types": "./dist/searchService.d.ts"
    }
  },
  "bin": {
    "note_taker": "./dist/index.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc --build",
    "postbuild": "chmod +x dist/index.js",
    "start": "node dist/index.js",
    "dev": "npm run build && npm run start",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.4",
    "gray-matter": "^4.0.3",
    "minisearch": "^7.1.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {}
}