{
  "name": "@notetaker/web-server",
  "version": "1.0.0",
  "description": "HTTP bridge server for notetaker MCP server",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc --build tsconfig.server.json && vite build --mode production",
    "start": "node dist/server.js",
    "dev": "nodemon",
    "dev:client": "vite",
    "test": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/commands": "^6.8.1",
    "@codemirror/lang-markdown": "^6.3.2",
    "@codemirror/language": "^6.11.0",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/lint": "^6.8.5",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.36.8",
    "@notetaker/mcp-server": "*",
    "@types/lodash": "^4.17.17",
    "@types/lodash-es": "^4.17.12",
    "codemirror": "^6.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@types/supertest": "^6.0.0",
    "@vitejs/plugin-react": "^4.5.0",
    "autoprefixer": "^10.4.21",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.3",
    "supertest": "^6.3.3",
    "tailwindcss": "^4.1.7",
    "vite": "^6.3.5"
  }
}
