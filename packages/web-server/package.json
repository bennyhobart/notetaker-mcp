{
  "name": "@notetaker/web-server",
  "version": "1.0.0",
  "description": "HTTP bridge server for notetaker MCP server",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc --build",
    "start": "node dist/server.js",
    "dev": "npm run build && npm run start",
    "watch": "nodemon",
    "test": "NODE_ENV=test jest",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:coverage": "NODE_ENV=test jest --coverage"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "@notetaker/mcp-server": "*"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/supertest": "^6.0.0",
    "supertest": "^6.3.3"
  }
}
