{
  "name": "@notetaker/web-server",
  "version": "1.0.0",
  "description": "HTTP bridge server for notetaker MCP server",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc --build && vite build --mode production",
    "start": "node dist/server.js",
    "dev": "nodemon",
    "dev:client": "vite",
