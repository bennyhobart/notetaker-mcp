{
  "name": "notetaker-workspace",
  "version": "1.0.0",
  "description": "Notetaker MCP server and web visualization workspace",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc --build --verbose tsconfig.build.json",
    "start:mcp": "npm run start -w packages/mcp-server",
    "start:web": "npm run start -w packages/web-server",
    "dev:mcp": "npm run dev -w packages/mcp-server",
    "dev:web": "npm run dev -w packages/web-server",
    "watch:mcp": "npm run watch -w packages/mcp-server",
    "watch:web": "npm run watch -w packages/web-server",
    "watch": "concurrently \"npm run watch:mcp\" \"npm run watch:web\"",
    "lint": "eslint packages/*/src --ext .ts",
    "lint:fix": "eslint packages/*/src --ext .ts --fix",
    "format": "prettier --write \"packages/*/src/**/*.ts\"",
    "check-format": "prettier --check \"packages/*/src/**/*.ts\"",
    "check": "npm run lint && npm run check-format",
    "fix": "npm run lint:fix && npm run format",
    "prepare": "husky",
    "test": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest",
    "test:watch": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --watch",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --coverage",
    "test:mcp": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --selectProjects mcp-server",
    "test:web": "NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules --no-warnings' jest --selectProjects web-server"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.8",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.18",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^9.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.2.5",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
